    </head>
    <body>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <p>LOGGED IN USER: {{ app.user.username }}</p>
            <form action="{{ path('app_logout') }}" method="get">
                <button type="submit">log out</button>
            </form>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
