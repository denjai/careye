{% extends 'base.html.twig' %}

{% block body %}
    <h1>CAR INFO</h1>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Remote ID</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Updated</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ car.id }}</td>
                    <td>
                        <a href="https://www.mobile.bg/pcgi/mobile.cgi?act=4&adv={{ car.remoteId }}" target="_blank">{{ car.remoteId }}</a>
                    </td>
                    <td>{{ car.title }}</td>
                    <td>{{ car.price }}</td>
                    <td>{{ car.updated is empty ? "" : car.updated |date('Y-m-d H:i:s') }}</td>
                    <td>{{ car.created is empty ? "" : car.created|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row justify-content-center">
        <div class="col-9 align-self-center" style="height: 640px">
            {% include '/page/carousel.html.twig' ignore missing with {'images': car.images} %}
        </div>
    </div>

    <h2>Car History</h2>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Price</th>
                <th>Advert Updated</th>
                <th>Created</th>
            </tr>
            </thead>
            <tbody>
            {% for historyRecord in carHistory %}
                <tr>
                    <td>{{ historyRecord.id }}</td>
                    <td>{{ historyRecord.price }}</td>
                    <td>{{ historyRecord.advertUpdated is empty ? "" : historyRecord.advertUpdated |date('Y-m-d H:i:s') }}</td>
                    <td>{{ historyRecord.created is empty ? "" : historyRecord.created|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}